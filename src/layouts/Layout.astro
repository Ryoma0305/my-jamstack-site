---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link href="/assets/main.css" rel="stylesheet" />
    <script is:inline src="https://code.jquery.com/jquery-3.6.0.min.js"
    ></script>
    <script is:inline src="/assets/gsap/jquery.magnific-popup.js"></script>
    <script is:inline src="/assets/gsap/gsap.min.js"></script>
    <script is:inline src="/assets/gsap/EasePack.min.js"></script>
    <script is:inline src="/assets/gsap/ScrollTrigger.min.js"></script>
    <script is:inline src="/assets/gsap/SplitText.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="l-contents">
    <Header />
    <main class="l-main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
